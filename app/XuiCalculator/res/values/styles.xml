        <item name="android:layout_marginTop">@dimen/history_result_padding_top</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PadButtonStyle">
        <item name="android:textColor">@color/pad_button_numeric_text_color_n</item>
