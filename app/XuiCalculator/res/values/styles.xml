    </style>
    <style name="CalculatorTheme.Edit" parent="@style/CalculatorTheme">
        <item name="android:statusBarColor">@color/history_edit_status_bar_color</item>
    </style>
    <style name="DisplayEditTextStyle">
        <item name="android:gravity">end|center</item>
        <item name="android:background">@android:color/transparent</item>
