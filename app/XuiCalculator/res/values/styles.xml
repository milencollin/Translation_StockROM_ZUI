        <item name="android:textSize">28.0dip</item>
    </style>
    <style name="PadButtonStyle.Multi.Operator" parent="@style/PadButtonStyle.Multi">
        <item name="android:textSize">22.0dip</item>
        <item name="android:textColor">@color/pad_button_operator_text_color_n</item>
