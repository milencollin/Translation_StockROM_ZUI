    <style name="DisplayEditTextStyle.FormulaOrResult.Multi.Land" parent="@style/DisplayEditTextStyle.FormulaOrResult.Multi">
        <item name="android:layout_marginBottom">16.0dip</item>
    </style>
    <style name="DisplayEditTextStyle.FormulaOrResult.Multi.Port" parent="@style/DisplayEditTextStyle.FormulaOrResult.Multi">
        <item name="android:layout_marginBottom">8.0dip</item>
    </style>
    <style name="DisplayLayoutStyle.Multi" parent="@style/DisplayLayoutStyle">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="DisplayLayoutStyle.Multi.Land" parent="@style/DisplayLayoutStyle.Multi">
        <item name="android:layout_height">@dimen/display_layout_height_land_multi</item>
    </style>
    <style name="DisplayLayoutStyle.Multi.Port" parent="@style/DisplayLayoutStyle.Multi">
        <item name="android:layout_height">@dimen/display_layout_height_port_multi</item>
    </style>
    <style name="DisplaySwitchStyle">
        <item name="android:textColor">@color/selector_switch_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_switch_stroke</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="DisplaySwitchStyle.Science.Multi" parent="@style/DisplaySwitchStyle.Science">
        <item name="android:textSize">13.0dip</item>
        <item name="android:layout_width">44.0dip</item>
        <item name="android:layout_height">23.0dip</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:layout_marginTop">22.0dip</item>
        <item name="android:text">@string/switch_off_science</item>
