        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_rowWeight">1.0</item>
        <item name="android:layout_columnWeight">1.0</item>
        <item name="padBgColor">@color/selector_pad_btn_bg</item>
        <item name="padImageBgColor">@color/selector_pad_btn_bg</item>
    </style>
    <style name="PadButtonStyle.Multi" parent="@style/PadButtonStyle">
        <item name="radiusType">useShort</item>
    </style>
    <style name="PadButtonStyle.Multi.Numeric" parent="@style/PadButtonStyle.Multi">
        <item name="android:textSize">22.0dip</item>
