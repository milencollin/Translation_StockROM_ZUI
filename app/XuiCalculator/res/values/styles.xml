    <style name="PadLayoutStyle.Multi" parent="@style/PadLayoutStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="PadLayoutStyle.Multi.Land" parent="@style/PadLayoutStyle.Multi">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
    </style>
    <style name="PadLayoutStyle.Multi.Port" parent="@style/PadLayoutStyle.Multi">
