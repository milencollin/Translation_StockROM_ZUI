    <style name="HistoryFormulaStyle">
        <item name="android:textSize">@dimen/history_formula_text_size</item>
        <item name="android:textColor">@color/history_formula_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="HistoryResultStyle">
        <item name="android:textSize">@dimen/history_result_text_size</item>
