        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingEnd">16.0dip</item>
    </style>
    <style name="DisplayEditTextStyle.Formula.Multi.Land" parent="@style/DisplayEditTextStyle.Formula.Multi">
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
