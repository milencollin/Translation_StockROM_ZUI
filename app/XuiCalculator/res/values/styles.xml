    <style name="DisplayEditTextStyle.Formula.Multi.Port" parent="@style/DisplayEditTextStyle.Formula.Multi">
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
    </style>
    <style name="DisplayEditTextStyle.FormulaOrResult.Multi" parent="@style/DisplayEditTextStyle.FormulaOrResult">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingEnd">16.0dip</item>
        <item name="minTextSize">25.0dip</item>
        <item name="maxTextSize">35.0dip</item>
        <item name="stepTextSize">5.0dip</item>
